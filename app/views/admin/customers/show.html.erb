<h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
  <div class="container px-5 px-sm-0">
  　<div class="row">
      <div class="col-md-8 offset-md-1">
        <h6>会員ID</h6>
        <p><%= @customer.id %></p>
        <h6>氏名</h6>
        <p>
          <%= @customer.last_name %>
          <%= @customer.first_name %>
        </p>
        <h6>フリガナ</h6>
        <p>
          <%= @customer.last_name_kana %>
          <%= @customer.first_name_kana %>
        </p>
        <h6>郵便番号</h6>
        <p><%= @customer.postal_code %></p>
        <h6>住所</h6>
        <p><%= @customer.address %></p>
        <h6>電話番号</h6>
        <p><%= @customer.telephone_number %></p>
        <h6>メールアドレス</h6>
        <p><%= @customer.email %></p>
        <%= link_to '編集する', edit_admin_customer_path(@customer.id), class:'btn btn-sm btn-success' %>
      </div>
    </div>
  </div>