<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>さんの詳細画面</h2>
      <div>
        <p>会員ID</p>
        <p><%= @customer.id %></p>
      </div>
      <%= form_with model: @customer, url:"/admin/customers/#{@customer.id}", local:true do |f| %>
      <div>
        <p>氏名</p>
        <p><%= f.text_field :last_name %><%= f.text_field :first_name %></p>
      </div>
      <div>
        <p>フリガナ</p>
        <p><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></p>
      </div>
      <div>
        <p>郵便番号</p>
        <p><%= f.text_field :postal_code %></p>
      </div>
      <div>
        <p>住所</p>
        <p><%= f.text_field :address %></p>
      </div>
      <div>
        <p>電話番号</p>
        <p><%= f.text_field :telephone_number %></p>
      </div>
      <div>
        <p>メールアドレス</p>
        <p><%= f.text_field :email %></p>
      </div>
      <%= f.submit '変更を保存', class:'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>