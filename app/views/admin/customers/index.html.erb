<div class="col-md-8 offset-md-1">
  <h4>会員一覧</h4>
  <table>
    <thead>
      <th width="80" heigth="24">会員ID</th>
      <th width="300" heigth="24">氏名</th>
      <th width="200" heigth="24">メールアドレス</th>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %>
            <%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>