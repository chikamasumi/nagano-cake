<div class="col-md-8 offset-md-1">
  <h4>注文履歴一覧</h4>
  <table>
    <thead>
      <th width="100" heigth="24">購入日時</th>
      <th width="300" heigth="24">購入者</th>
      <th width="200" heigth="24">注文個数</th>
    </thead>
    <tbody>
      <% @order.each do |order| %>
      <% @amount = 0 %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
            <%= order.created_at.strftime('%Y/%m/%d') %>
          <% end %>
        </td>
        <td><%= order.name %></td>
        <% order.order_ditails.each do |order_ditail| %>
          <% @amount += (order_ditail.amount) %>
      　<% end %>
        <td><%= @amount %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>