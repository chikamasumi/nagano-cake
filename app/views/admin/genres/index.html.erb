<h4>ジャンル一覧・追加</h4>
<%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
  <p>ジャンル名</p>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<p>ジャンル</p>
<% @genres.each do |genre| %>
  <p><%= genre.name %></p>
  <p><%= link_to '編集する', edit_admin_genre_path(genre.id), class:'btn btn-sm btn-success' %></p>
<% end %>