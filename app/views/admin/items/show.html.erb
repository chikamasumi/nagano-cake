<h4>商品詳細</h4>
  <div class="container px-5 px-sm-0">
  　<div class="row">
    　<div class="col-md-3">
      　<%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg' %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h6>商品名</h6>
        <p><%= @item.name %></p>
        <h6>商品説明</h6>
        <p><%= @item.introduction %></p>
        <h6>ジャンル</h6>
        <p><%= @item.genre_id %></p>
        <h6>税抜価格</h6>
        <p><%= @item.price %>円</p>
        <%= link_to '編集する', edit_admin_item_path(@item.id), class:'btn btn-sm btn-success' %>
      </div>
    </div>
  </div>