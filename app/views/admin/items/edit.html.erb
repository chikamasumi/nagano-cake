<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>画像編集</h2>
      <%= form_with model: @item, url:"/admin/items/#{@item.id}", local:true do |f| %>
      <div>
        <p>商品画像</p>
        <p><%= f.attachment_field :image %></p>
      </div>
      <div>
        <p>商品名</p>
        <p><%= f.text_field :name %></p>
      </div>
      <div>
        <p>商品説明</p>
        <p><%= f.text_area :introduction %></p>
      </div>
      <div>
        <p>ジャンル</p>
        <p><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></p>
      </div>
      <div>
        <p>税抜価格</p>
        <p><%= f.text_field :price %></p>
      </div>
      <%= f.submit '変更を保存', class:'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>