<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col">
      <h4>配送先登録/一覧</h4>
      <%= form_with model:@address, url: addresses_path, local:true do |f| %>
        <div class="field">
          <%= f.label '郵便番号(ハイフン)' %>
          <%= f.text_area :postal_code %>
        </div>
        <div class="field">
          <%= f.label '住所' %>
          <%= f.text_area :address %>
        </div>
        <div class="field">
          <%= f.label '宛名' %>
          <%= f.text_field :name %>
        </div>
        <div class="actions">
    　     <%= f.submit '新規登録', class:'btn btn-sm btn-success' %>
  　     </div>
      <% end %>

      <table class="table table-striped">
        <thead>
          <th width="200" heigth="24">郵便番号</th>
          <th width="400" heigth="24">住所</th>
          <th width="200" heigth="24">宛名</th>
          <th width="600" heigth="24" colspan="2"></th>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to '編集する', edit_address_path(address.id), class:'btn btn-sm btn-success' %></td>
            <td><%= link_to '削除する', address_path(address.id), class:'btn btn-sm btn-danger', method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>