<h4>商品一覧</h4>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <% @items.each do |item| %>
        <%= link_to items_path(item.id) do %>
        <p>
          <%= link_to items_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 100, 80, format: 'jpeg' %>
          <% end %>
        </p>
        <p><%= item.name %></p>
        <% end %>
        <p><%= item.price %></p>
      <% end %>
    </div>
  </div>
</div>