<h4>商品一覧</h4>
<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-lg-3">
        <div>
          <p>
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, :fill, 100, 80, format: 'jpeg' %>
            <% end %>
          </p>
          <p><%= item.name %></p>
          <p><%= item.price %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>