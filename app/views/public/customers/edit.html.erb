<h4>会員情報編集</h4>
<%= form_with model: @customer, local:true do |f| %>
  <div>
    <p>氏名</p>
    <p><%= f.text_field :last_name %><%= f.text_field :first_name %></p>
  </div>
  <div>
    <p>フリガナ</p>
    <p><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></p>
  </div>
  <div>
    <p>郵便番号</p>
    <p><%= f.text_field :postal_code %></p>
  </div>
  <div>
    <p>住所</p>
    <p><%= f.text_field :address %></p>
  </div>
  <div>
    <p>電話番号</p>
    <p><%= f.text_field :telephone_number %></p>
  </div>
  <div>
    <p>メールアドレス</p>
    <p><%= f.email_field :email %></p>
  </div>
<%= f.submit '編集内容を保存', class:'btn btn-secondary' %>
<% end %>
<%= link_to '退会する', confirm_unsubscribe_path, class:'btn btn-sm btn-danger' %>