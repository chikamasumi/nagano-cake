<div class="col-md-8 offset-md-1">
  <h4>ショッピングカート</h4>
  <%= button_to "全て削除", destroy_all_cart_items_path, class:'btn btn-sm btn-danger', method: :delete %>
  <table class="table table-striped">
    <thead>
      <th width="300" heigth="24">商品名</th>
      <th width="200" heigth="24">単価（税込)</th>
      <th width="200" heigth="24">数量</th>
      <th width="200" heigth="24">小計</th>
      <th width="200" heigth="24"></th>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to '削除する', cart_item_path(cart_item.id), class:'btn btn-sm btn-danger', method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% @total_price += cart_item.subtotal %>
      <% end %>

    </tbody>
  </table>
  <p>合計金額</p>
  <p><%= @total_price %>円</p>
  <%= link_to '買い物を続ける', items_path, class:'btn btn-primary' %>
  <%= link_to '情報入力に進む', new_order_path, class:'btn btn-success' %>
</div>