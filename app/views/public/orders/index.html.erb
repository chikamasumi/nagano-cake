<p id="notice"></p>
<h4>注文履歴一覧</h4>
<table class="table table-striped">
  <thead>
    <th width="300" heigth="24">注文日</th>
    <th width="300" heigth="24">配送先</th>
    <th width="200" heigth="24">注文商品</th>
    <th width="100" heigth="24">支払金額</th>
    <th width="100" heigth="24">注文詳細</th>
  </thead>
  <tbody>
  <% @order.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>〒<%= order.postal_code %><%= order.address %><%= order.name %></td>
      <td>
        <% order.order_ditails.each do |order_ditail| %>
        　<p><%= order_ditail.item.name %></p>
        <% end %>
      </td>
      <td><%= order.payment %></td>
      <td><%= link_to '表示する', order_path(order.id), class:'btn btn-primary' %></td>
    </tr>
  <% end %>
  </tbody>